{
    "compilerOptions": {
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "target": "ES2020",
        "moduleResolution": "bundler",
        "noImplicitThis": true,
        "strict": true,
        "noImplicitAny": false,
        "verbatimModuleSyntax": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
